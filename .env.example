# ==============================================
# ELEVAS RRHH - CENTRALIZED ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env and fill in your actual values
# This single .env file is used by ALL services (backend, frontend, landing)

# ==============================================
# GENERAL CONFIGURATION
# ==============================================
NODE_ENV=production

# ==============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==============================================
DB_HOST=database
DB_PORT=3034
DB_USERNAME=postgres
DB_PASSWORD=your_secure_db_password_here
DB_DATABASE=elevas_rrhh

# ==============================================
# JWT AUTHENTICATION
# ==============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_jwt_secret_key_minimum_32_characters_long
JWT_REFRESH_EXPIRES_IN=7d

# ==============================================
# BACKEND API CONFIGURATION
# ==============================================
PORT=3000

# ==============================================
# FRONTEND URLs (Public - exposed to browser)
# ==============================================
# Landing page URL
LANDING_URL=https://elevasconsultin.com
# Admin/Dashboard frontend URL
FRONTEND_URL=https://elevas-app.com
# API URL for frontend requests (public)
NEXT_PUBLIC_API_URL=https://api.elevas-app.com
# API URL for landing requests (public)
NEXT_PUBLIC_BACKEND_URL=https://api.elevas-app.com

# ==============================================
# OPENAI CONFIGURATION (Server-side only)
# ==============================================
# Get your API key from: https://platform.openai.com/api-keys
# Used by: backend-rrhh, frontend-rrhh, elevas-landing
OPENAI_API_KEY=your_openai_api_key_here

# ==============================================
# EMAIL CONFIGURATION (SMTP)
# ==============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=talento@elevasconsulting.com
MAIL_PASSWORD=your_gmail_app_password_here
MAIL_FROM=talento@elevasconsulting.com

# ==============================================
# CORS CONFIGURATION
# ==============================================
CORS_ORIGIN=https://elevas-app.com,https://elevasconsultin.com

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
BCRYPT_SALT_ROUNDS=12

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# COMPANY INFORMATION (for email templates)
# ==============================================
COMPANY_NAME=Elevas RRHH
RECRUITER_NAME=Equipo de Recursos Humanos

# ==============================================
# SSL/TLS DOMAINS (for Let's Encrypt)
# ==============================================
DOMAIN_LANDING=elevasconsultin.com
DOMAIN_APP=elevas-app.com
DOMAIN_API=api.elevas-app.com
SSL_EMAIL=admin@elevasconsultin.com

# ==============================================
# NOTES
# ==============================================
# - Generate secure JWT_SECRET: openssl rand -base64 32
# - Get OpenAI API key from: https://platform.openai.com/api-keys
# - Gmail App Password: https://myaccount.google.com/apppasswords
# - NEVER commit the actual .env file to version control
# - This .env file should be placed in the ROOT of the project
# - Docker Compose will automatically load this file
