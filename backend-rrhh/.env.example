# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=3000
NODE_ENV=production

# ==============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==============================================
DB_HOST=your-db-host
DB_PORT=5432
DB_USERNAME=your-db-username
DB_PASSWORD=your-db-password
DB_DATABASE=elevas_hr

# ==============================================
# JWT CONFIGURATION
# ==============================================
# Generate a secure random string for JWT_SECRET (e.g., using: openssl rand -base64 32)
JWT_SECRET=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING
JWT_EXPIRES_IN=24h

# Refresh token configuration
JWT_REFRESH_SECRET=CHANGE-THIS-TO-ANOTHER-SECURE-RANDOM-STRING
JWT_REFRESH_EXPIRES_IN=7d

# ==============================================
# EMAIL CONFIGURATION (SMTP)
# ==============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your-email@domain.com
MAIL_PASSWORD=your-app-specific-password
MAIL_FROM=noreply@yourdomain.com

# Frontend URLs for email links (password reset, etc.)
# Landing page URL
LANDING_URL=https://yourdomain.com
# Admin/Dashboard frontend URL
FRONTEND_URL=https://rrhh.yourdomain.com

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# OPENAI CONFIGURATION
# ==============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ==============================================
# N8N WHATSAPP WEBHOOK (Optional)
# ==============================================
# N8N_WHATSAPP_WEBHOOK_URL=https://your-n8n-instance.com/webhook/whatsapp

# ==============================================
# COMPANY INFORMATION (for email templates)
# ==============================================
COMPANY_NAME=Elevas RRHH
RECRUITER_NAME=Equipo de Recursos Humanos

# ==============================================
# SECURITY
# ==============================================
BCRYPT_SALT_ROUNDS=12

# ==============================================
# CORS CONFIGURATION (Optional - for production)
# ==============================================
# CORS_ORIGIN=https://yourdomain.com,https://rrhh.yourdomain.com
