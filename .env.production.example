# ============== BACKEND (.env.production) ==============

# General
NODE_ENV=production
PORT=3000

# Database
DB_HOST=database
DB_PORT=5432
DB_USERNAME=elevas_user
DB_PASSWORD=CAMBIAR_PASSWORD_SEGURO_AQUI
DB_DATABASE=elevas_hr

# JWT
JWT_SECRET=CAMBIAR_SECRET_SUPER_SEGURO_AQUI_MIN_32_CHARS
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=CAMBIAR_REFRESH_SECRET_SUPER_SEGURO_AQUI_MIN_32_CHARS
JWT_REFRESH_EXPIRES_IN=7d

# URLs
LANDING_URL=https://elevasconsultin.com
FRONTEND_URL=https://elevas-app.com
CORS_ORIGIN=https://elevas-app.com,https://elevasconsultin.com

# OpenAI
OPENAI_API_KEY=sk-proj-TU_API_KEY_AQUI

# Email (SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=tu-email@gmail.com
MAIL_PASSWORD=tu-password-de-aplicacion
MAIL_FROM=tu-email@gmail.com

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Company
COMPANY_NAME=Elevas RRHH
RECRUITER_NAME=Equipo de Recursos Humanos


# ============== FRONTEND (.env.production) ==============

NODE_ENV=production
PORT=3001
HOSTNAME=0.0.0.0
NEXT_PUBLIC_API_URL=https://api.elevas-app.com
OPENAI_API_KEY=sk-proj-TU_API_KEY_AQUI


# ============== LANDING (.env.production) ==============

NODE_ENV=production
